# Environment Configuration for Tazama Services
# Copy this file to .env and customize as needed

# Database Configuration
POSTGRES_DB=tazama
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/tazama

# Redis/Valkey Configuration
REDIS_HOST=valkey
REDIS_PORT=6379

# NATS Configuration
NATS_URL=nats://nats:4222

# Service Ports
ADMIN_SERVICE_PORT=3100
TMS_SERVICE_PORT=3000

# NATS Subjects
EVENT_DIRECTOR_SUBJECT=event-director
RULE_SUBJECT_PREFIX=rule-
TYPOLOGY_SUBJECT=typology-processor
TADP_SUBJECT=tadp
INTERDICTION_SUBJECT=interdiction
CMS_SUBJECT=cms-alert

# Application Settings
NODE_ENV=production
LOG_LEVEL=info

# JWT Configuration (for admin-service)
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=24h

# Rule Configuration
RULE_901_ENABLED=true
EVENT_FLOW_ENABLED=true

# Typology Thresholds
ALERT_THRESHOLD=50
INTERDICTION_THRESHOLD=75

# External Integrations (Optional)
# CMS_API_URL=http://external-cms:8080
# INTERDICTION_API_URL=http://external-interdiction:8080
